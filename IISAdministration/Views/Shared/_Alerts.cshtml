@{
    var fluidContainer = (bool?)ViewData["Fluid"] ?? false;
}

@if (TempData.GetAlert().Count > 0)
{
    <div class="@(fluidContainer ? "container-fluid" : "container")">
        @foreach (var alert in TempData.GetAlert())
        {
            var dismiss = alert.Dismissable ? "alert-dismissible" : "";
            <div class="alert alert-@alert.Style.ToString() @dismiss">
                @if (alert.Dismissable)
                {
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                }
                @alert.Message
            </div>
        }
    </div>
}
