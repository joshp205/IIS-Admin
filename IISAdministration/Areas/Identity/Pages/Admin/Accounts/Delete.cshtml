@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<label>If you delete the last Admin, the site will have to be reset in order for accounts to be added.</label>
<div>
    <hr />
    <dl class="row">
        <dt class="col-6">
            @Html.DisplayNameFor(model => model.IdentityUser.Email)
        </dt>
        <dd class="col-6">
            @Html.DisplayFor(model => model.IdentityUser.Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="IdentityUser.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <p class="mt-3">
        <a asp-page="./Index">Back to List</a>
    </p>
</div>
